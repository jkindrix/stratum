{
  "name": "stratum",
  "version": "1.0.0",
  "description": "Music analysis toolkit: pitch-class sets, tension curves, chromatic staff rendering, MIDI I/O",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./pitch": {
      "types": "./dist/pitch/index.d.ts",
      "import": "./dist/pitch/index.js"
    },
    "./time": {
      "types": "./dist/time/index.d.ts",
      "import": "./dist/time/index.js"
    },
    "./tension": {
      "types": "./dist/tension/index.d.ts",
      "import": "./dist/tension/index.js"
    },
    "./io": {
      "types": "./dist/io/index.d.ts",
      "import": "./dist/io/index.js"
    },
    "./render": {
      "types": "./dist/render/index.d.ts",
      "import": "./dist/render/index.js"
    },
    "./analysis": {
      "types": "./dist/analysis/index.d.ts",
      "import": "./dist/analysis/index.js"
    },
    "./composition": {
      "types": "./dist/composition/index.d.ts",
      "import": "./dist/composition/index.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "music",
    "theory",
    "analysis",
    "pitch-class-set",
    "notation",
    "midi",
    "chromatic-staff"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkindrix/stratum.git"
  },
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.0"
  }
}
